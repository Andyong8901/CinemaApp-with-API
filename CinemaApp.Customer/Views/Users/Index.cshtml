@model IEnumerable<CinemaApi.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movie List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsShowing)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @if (item.IsShowing == true)
                {
                    <span>Now Showing</span>
                }
                else
                {
                    <span>Coming Soon</span>
                }
            </td>
            <td>
                @if (item.IsShowing == true)
                {
                    @Html.ActionLink("Select Movie", "SelectedMovie", new { id = item.MovieId })
                }
            </td>
        </tr>
    }

</table>